<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wtc.xmut.taoschool">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <application
        android:name=".myApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="icon">
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="淘学"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.PublishActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activity.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.RegisterActivity"
            android:label="注册淘学" />
        <activity
            android:name=".ui.activity.LoginActivity"
            android:label="登录淘学" />
        <activity
            android:name=".ui.activity.SettingActivity"
            android:label="设置" />
        <activity
            android:name=".ui.activity.PersonActivity"
            android:label="个人" />
        <activity
            android:name=".ui.activity.ShopDetailActivity"
            android:label="@string/title_activity_shopdetial"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.SubmitDetailActivity"
            android:label="@string/title_activity_order"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.SearchResultsActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.MyPublishActivity"
            android:label="@string/title_activity_my_publish"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.MyLikeActivity"
            android:label="@string/title_activity_my_like"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.MyBuyActivity"
            android:label="@string/title_activity_my_buy"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.MySallerActivity"
            android:label="@string/title_activity_my_saller"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ui.activity.ConfirmActivity"
            android:label="确认信息"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>