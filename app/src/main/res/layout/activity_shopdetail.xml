<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_shopdetail"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        xmlns:fresco="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gray_bg"
        app:cardCornerRadius="2dp"
        android:layout_marginTop="?attr/actionBarSize"
        app:cardElevation="2dp"
        app:layout_collapseParallaxMultiplier="0.5"
        app:layout_scrollFlags="scroll"
        android:id="@+id/nestedScrollView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/list_bg"
            android:padding="8dp">

        <com.wtc.xmut.taoschool.view.CircleImageView
            android:id="@+id/sld_usericon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/usericon"
            />
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_user_name"
            android:layout_alignBottom="@+id/tv_user_name"
            android:layout_alignParentEnd="true"
            android:fontFamily="sans-serif"
            android:text="加载中..."
            android:textAllCaps="false"
            android:textColor="@android:color/holo_red_light"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/sld_usericon"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/sld_usericon"
            android:text="加载中..."
            android:textColor="@color/bb_darkBackgroundColor" />

        <TextView
            android:id="@+id/tv_fromwhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sld_usericon"
            android:layout_alignStart="@+id/tv_user_name"
            android:text="加载中..." />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout">


            <TextView
                android:id="@+id/tv_shop_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="61dp"
                android:lineSpacingMultiplier="1.2"
                android:text="加载中..."
                android:textSize="14sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/sdv_shop_pic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/loadding"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"

                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="留言·"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="0"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <com.wtc.xmut.taoschool.view.CommentListView
                    android:layout_marginBottom="60dp"
                    android:background="#ffffff"
                    android:id="@+id/lv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </com.wtc.xmut.taoschool.view.CommentListView>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#fff"
        android:id="@+id/relativeLayout2">

        <ImageView
            android:id="@+id/iv_addcomment"
            android:layout_width="30dp"
            android:layout_height="23dp"
            app:srcCompat="@drawable/contact_entry"
            android:layout_marginStart="11dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true" />
        <TextView
            android:textSize="8sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/iv_addcomment"
            android:layout_toStartOf="@+id/iv_love"
            android:id="@+id/textView3" />
        <Button
            android:id="@+id/btn_buy"
            android:text="确认购买"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#f54f4f"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/iv_love"
            android:layout_width="30dp"
            android:layout_height="23dp"
            android:layout_alignTop="@+id/iv_addcomment"
            android:layout_marginStart="28dp"
            android:layout_toEndOf="@+id/iv_addcomment"
            app:srcCompat="@drawable/love_gray" />

        <TextView
            android:textSize="8sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点赞"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignStart="@+id/iv_love"
            android:layout_alignEnd="@+id/iv_love" />
    </RelativeLayout>



</RelativeLayout>